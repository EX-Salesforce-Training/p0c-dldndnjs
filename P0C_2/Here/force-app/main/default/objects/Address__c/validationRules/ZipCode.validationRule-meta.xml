<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ZipCode</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(ZipCode__c, &quot;\\d{5}(-\\d{4})?&quot;))</errorConditionFormula>
    <errorDisplayField>ZipCode__c</errorDisplayField>
    <errorMessage>Please Use validate Zip Code</errorMessage>
</ValidationRule>
